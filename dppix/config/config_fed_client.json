{
  "format_version": 2,

  "executors": [
    {
      "tasks": ["train", "submit_model", "get_weights"],
      "executor": {
        "path": "pix_trainer.PixTrainer",
        "args": {
          "lr": 0.0002,
          "epochs": 1,
          "analytic_sender_id": "analytic_sender",
          "data_path": "~/localfiles/data"
        }
      }
    }
  ],
  "task_result_filters": [
    {
      "tasks": ["train"],
      "filters":[
          {
          "path": "nvflare.app_common.filters.svt_privacy.SVTPrivacy",
          "args": {
            "fraction": 0.9,
            "epsilon": 0.001,
            "noise_var": 1.0,
            "gamma": 1e-4
          }
        }
      ]
    }
  ],
  "task_data_filters": [
  ],
  "components": [
    {
        "id": "analytic_sender",
        "name": "AnalyticsSender",
        "args": {}
    },
    {
        "id": "event_to_fed",
        "name": "ConvertToFedEvent",
        "args": {
            "events_to_convert": [
                "analytix_log_stats"
            ],
            "fed_event_prefix": "fed."
        }
    }
  ]
}
